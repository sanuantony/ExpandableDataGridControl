<UserControl x:Class="TemplateUserControls.DataGridUserControl.ExpandableDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemplateUserControls.DataGridUserControl"
             mc:Ignorable="d" 
             x:Name="DataGridUIUserControl"
             d:DesignHeight="300" d:DesignWidth="350">
    <Grid Name="DataGridUIControlGrid">
        <DataGrid Name="DataGridExpander" ItemsSource="{Binding PersonCollection}" SelectedItem="{Binding Path=Person,UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}" SizeChanged="DataGrid_SizeChanged">
            <DataGrid.Columns>
                <DataGridTextColumn/>
                <DataGridTextColumn/>
                <DataGridTextColumn/>
                <DataGridTextColumn/>
                <DataGridTextColumn/>
                <DataGridTextColumn/>
            </DataGrid.Columns>
            
        </DataGrid>
    </Grid>
</UserControl>
